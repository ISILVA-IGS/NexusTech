<script>
  //        ##  script de UPDATE infor usuario   ##  

  var teste = new File('#inputPhotoUpdate', '#imgFileUpdate')
  teste.ler().then(rs => {
    console.log(rs);
    fotoUpdate.value = rs;
  });

  let btn_u = document.querySelectorAll('#btn_update');
  let form = document.querySelector('#modal-update-user form');
  [...btn_u].forEach(function (btn) {
    btn.addEventListener('click', (e) => {

      var tr = e.path.find(el => {
        if (el.tagName === 'TR') {
          return el;
        }
      })

      var row = JSON.parse(tr.dataset.row);
      console.log(row);
      for (let data in row) {


        switch (data) {

          case 'foto':
            form.querySelector('img').src = `${row[data]}`;
            fotoUpdate.value = row[data];
            inputPhotoUpdate.file= row[data];
            break;
          case 'Nome_usuario':
            form.querySelector('[name = usuario]').value = `${row[data]}`
            break
          case 'Email':
            form.querySelector('[name = email]').value = `${row[data]}`
            break;
          case 'Tel_Cel':
            form.querySelector('[name = celular]').value = `${row[data]}`
            break;
          case 'Senha':
            form.querySelector('[name = password]').value = `${row[data]}`
            form.querySelector('[name = passwordConfirm]').value = `${row[data]}`

            break;
          case 'CPF': {
            idUpdate.value = row[data];
          }
            console.log(row);






        }


      }
      $('#modal-update-user').modal('show');


    });



  });

  form.save(btnSaveUpdate).then(rs => {
     window.location.reload() }).catch(err => { console.log(err) });




</script>

