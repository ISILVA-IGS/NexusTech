<%- include('include/header') -%>

<!-- Left side column. contains the logo and sidebar -->
<%- include('include/menuLateral') -%>


<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Usuários
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
      <li class="active">Usuários</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content container-fluid">
    <div class="box">
      <% if(user.Administrador){ %>

      <div class="box-header">
        <h3 class="box-title">Lista</h3>
        <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
            class="fa fa-plus"></i> Novo</a>
      </div>
      <%}%>
            <!-- /.box-header 
            -->
            <div class="box-body no-padding">
                <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th style="width: 20px">#</th>
                        <th>Nome</th>
                        <th>Usuario</th>
                        <th>Celular</th>
                        <th>CRF</th>
                        <th>Administrador</th>
                        <th>Notificação</th>

                      </tr>
                    </thead>
                    <tbody>
                        <%users.forEach((usr)=>{ %>
      <tr data-row="<%= JSON.stringify(usr) %>">
        <td><img src="<%=usr.foto%>" alt="" style="height: 40px;"></td>
        <td><%=usr.Nome_completo%></td>
        <td><%=usr.Nome_usuario%></td>
        <td><%=usr.Tel_Cel%></td>
        <td><%=usr.CRF%></td>
        <td><%=usr.Administrador%></td>
        <td><%=usr.Notificacao%></td>


        <td>
          <% if(user.Administrador){ %>

          <button id="btn_updateAdm" type="button" class="btn btn-xs btn-warning btn-update" data-toggle="modal"
            data-target="#modal-update"><i class="fa fa-lock"></i> Editar inf. Administrativa</button>&nbsp;
          <%}%>
                                
                                  <button id="btn_update" type="button" class="btn btn-xs btn-info" data-toggle="modal" data-target="#modal-update-password">
                                      <i class="fa fa-pencil"></i> Editar inf. Usuario</button>&nbsp;
                                  <button type="button" id="btn_Delete" class="btn btn-xs btn-danger btn-delete"><i class="fa fa-trash"></i> Excluir</button></td>
                          </tr>
                        <%})%>

          </tbody>
          </table>
    </div>
    <!-- /.box-body -->
</div>

</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

